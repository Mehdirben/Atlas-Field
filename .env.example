# Frontend Environment Variables

# Public API URL (for browser/client-side requests)
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
# Internal API URL (for server-side requests inside Docker)
INTERNAL_API_URL=http://backend:8000/api/v1

NEXTAUTH_URL=http://localhost:4000
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXT_PUBLIC_MAPTILER_KEY=your_maptiler_key_here

# Gemini API Key (keep this on the server side)
GEMINI_API_KEY=your_gemini_api_key_here

# Sentinel Hub API (Copernicus Data Space)
SENTINEL_HUB_CLIENT_ID=your_sentinel_hub_client_id_here
SENTINEL_HUB_CLIENT_SECRET=your_sentinel_hub_client_secret_here
